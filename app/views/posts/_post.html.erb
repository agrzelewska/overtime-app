<tr>
  <td><%= post.id %></td>
  <td><%= post.date %></td>
  <td><%= post.overtime_request %></td>
  <td><%= post.user.full_name %></td>
  <td><%= truncate(post.rationale) %></td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= render partial: 'links', locals: { post: post } if policy(post).update? %>
  </td>
</tr>