<h1>Posts</h1>
<table class="table table-striped table-hover">
  <head>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>User</th>
      <th>Rationale</th>
    </tr>
  </head>
  <body>
    <tr>
      <% @posts.each do |post| %>
        <td><%= post.id %></td>
        <td><%= post.date %></td>
        <td><%= post.user.last_name %></td>
        <td><%= truncate(post.rationale) %></td>
    </tr>
      <% end %>
      </body>
</table>

